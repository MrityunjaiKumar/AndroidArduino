<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:guage="http://schemas.android.com/apk/res/com.riis.androidarduino.can"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1.0"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.45"
        android:orientation="horizontal" >

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="0.35" >
	        
	        <TextView
	            android:id="@+id/engineRunTime"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="0.5"
	            android:gravity="center"
	            android:text="@string/engineRunTimePreface"
	            android:textColor="@android:color/white" />
        
	    </LinearLayout>
		
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="0.3"
	        android:orientation="horizontal" >

	        <Button
		        android:id="@+id/connectButton"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:text="Connect" />
		    
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="0.35" >
		    
	        <Button
		        android:id="@+id/startTrackButton"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="0.33"
		        android:text="Start Track" />
	        <Button
		        android:id="@+id/pauseTrackButton"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="0.33"
		        android:text="Pause Track" />
	        <Button
		        android:id="@+id/stopTrackButton"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="0.33"
		        android:text="Stop Track" />
	        
	    </LinearLayout>
	    
	</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:orientation="horizontal" >
	    
         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="match_parent"
             android:layout_weight="0.35"
             android:orientation="vertical"
             android:weightSum="1" >
			
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="0.7"
		        android:orientation="horizontal" >
	
		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_weight="0.5"
			        android:orientation="vertical" >
			        
		            <TextView
		                android:id="@+id/oilTempTxt"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:layout_weight="0.5"
		                android:gravity="center"
		                android:text="@string/engineOilTempPreface"
		                android:textColor="@android:color/white" />
			        
			        <ProgressBar
			            android:id="@+id/oilTempBar"
			            style="?android:attr/progressBarStyleHorizontal"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_margin="5dp"
			            android:layout_weight="0.5" />
			        
		        </LinearLayout>

		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_weight="0.5"
			        android:orientation="vertical" >
			        
			        <TextView
			            android:id="@+id/coolantTempTxt"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:layout_weight="0.5"
			            android:gravity="center"
			            android:text="@string/engineCoolantTempPreface"
			            android:textColor="@android:color/white" />
			        
			        <ProgressBar
			            android:id="@+id/coolantTempBar"
			            style="?android:attr/progressBarStyleHorizontal"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_margin="5dp"
			            android:layout_weight="0.5" />
			        
		        </LinearLayout>
		        
		    </LinearLayout>

		    <com.riis.androidarduino.can.GuageView
			    android:id="@+id/speedometer"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="0.3"
		        guage:maxValue="8000"
		        guage:minValue="0" />
	        
	    </LinearLayout>
		
	    <com.riis.androidarduino.can.GuageView
		    android:id="@+id/speedometer"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="0.3"
	        guage:maxValue="240"
	        guage:minValue="0" />
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="0.35"
	        android:orientation="vertical" >
		    
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="0.2"
	            android:orientation="vertical" >
		        
	            <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="match_parent"
			        android:layout_weight="0.5" >
			        
	                <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:layout_weight="0.7"
				        android:orientation="horizontal" >
			
				        <LinearLayout
					        android:layout_width="fill_parent"
					        android:layout_height="fill_parent"
					        android:layout_weight="0.33"
					        android:orientation="vertical" >
					        
				            <TextView
				                android:id="@+id/throttlePosTxt"
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:layout_weight="0.5"
				                android:gravity="center"
				                android:text="@string/throttlePosPreface"
				                android:textColor="@android:color/white" />
					        
					        <ProgressBar
					            android:id="@+id/throttlePosBar"
					            style="?android:attr/progressBarStyleHorizontal"
					            android:layout_width="fill_parent"
					            android:layout_height="fill_parent"
					            android:layout_margin="5dp"
					            android:layout_weight="0.5" />
					        
				        </LinearLayout>
		
				        <LinearLayout
					        android:layout_width="fill_parent"
					        android:layout_height="fill_parent"
					        android:layout_weight="0.33"
					        android:orientation="vertical" >
					        
					        <TextView
					            android:id="@+id/absoluteThrottleBTxt"
					            android:layout_width="match_parent"
					            android:layout_height="match_parent"
					            android:layout_weight="0.5"
					            android:gravity="center"
					            android:text="@string/absThrottleBPreface"
					            android:textColor="@android:color/white" />
					        
					        <ProgressBar
					            android:id="@+id/absoluteThrottleBBar"
					            style="?android:attr/progressBarStyleHorizontal"
					            android:layout_width="fill_parent"
					            android:layout_height="fill_parent"
					            android:layout_margin="5dp"
					            android:layout_weight="0.5" />
					        
				        </LinearLayout>
				        
				        <LinearLayout
					        android:layout_width="fill_parent"
					        android:layout_height="fill_parent"
					        android:layout_weight="0.33"
					        android:orientation="vertical" >
					        
				            <TextView
				                android:id="@+id/absoluteThrottleCTxt"
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:layout_weight="0.5"
				                android:gravity="center"
				                android:text="@string/absThrottleCPreface"
				                android:textColor="@android:color/white" />
					        
					        <ProgressBar
					            android:id="@+id/absoluteThrottleCBar"
					            style="?android:attr/progressBarStyleHorizontal"
					            android:layout_width="fill_parent"
					            android:layout_height="fill_parent"
					            android:layout_margin="5dp"
					            android:layout_weight="0.5" />
					        
				        </LinearLayout>
				        
				    </LinearLayout>
		        
			    </LinearLayout>
			    
	            <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="match_parent"
			        android:layout_weight="0.5" >
	                
	                <LinearLayout
					        android:layout_width="fill_parent"
					        android:layout_height="fill_parent"
					        android:layout_weight="0.33"
					        android:orientation="vertical" >
					        
				            <TextView
				                android:id="@+id/absAccPosDTxt"
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:layout_weight="0.5"
				                android:gravity="center"
				                android:text="@string/accPedalPosDPreface"
				                android:textColor="@android:color/white" />
					        
					        <ProgressBar
					            android:id="@+id/absAccPosDBar"
					            style="?android:attr/progressBarStyleHorizontal"
					            android:layout_width="fill_parent"
					            android:layout_height="fill_parent"
					            android:layout_margin="5dp"
					            android:layout_weight="0.5" />
					        
				        </LinearLayout>
		
				        <LinearLayout
					        android:layout_width="fill_parent"
					        android:layout_height="fill_parent"
					        android:layout_weight="0.33"
					        android:orientation="vertical" >
					        
					        <TextView
					            android:id="@+id/absAccPosETxt"
					            android:layout_width="match_parent"
					            android:layout_height="match_parent"
					            android:layout_weight="0.5"
					            android:gravity="center"
					            android:text="@string/accPedalPosEPreface"
					            android:textColor="@android:color/white" />
					        
					        <ProgressBar
					            android:id="@+id/absAccPosEBar"
					            style="?android:attr/progressBarStyleHorizontal"
					            android:layout_width="fill_parent"
					            android:layout_height="fill_parent"
					            android:layout_margin="5dp"
					            android:layout_weight="0.5" />
					        
				        </LinearLayout>
				        
				        <LinearLayout
					        android:layout_width="fill_parent"
					        android:layout_height="fill_parent"
					        android:layout_weight="0.33"
					        android:orientation="vertical" >
					        
				            <TextView
				                android:id="@+id/absAccPosFTxt"
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:layout_weight="0.5"
				                android:gravity="center"
				                android:text="@string/accPedalPosFPreface"
				                android:textColor="@android:color/white" />
					        
					        <ProgressBar
					            android:id="@+id/absAccPosFBar"
					            style="?android:attr/progressBarStyleHorizontal"
					            android:layout_width="fill_parent"
					            android:layout_height="fill_parent"
					            android:layout_margin="5dp"
					            android:layout_weight="0.5" />
					        
				        </LinearLayout>
		        
			    </LinearLayout>
	        
		    </LinearLayout>
			
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="0.4"
		        android:orientation="horizontal" >
	
		        <TextView
		            android:id="@+id/airTemp"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_weight="0.5"
		            android:gravity="center"
		            android:text="@string/airTempPreface"
		            android:textColor="@android:color/white" />
		        
		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="0.4" >
		        
		        <TextView
		            android:id="@+id/hybridBatteryPack"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_weight="0.5"
		            android:gravity="center"
		            android:text="@string/hybridBatteryPackPreface"
		            android:textColor="@android:color/white" />
		        
		    </LinearLayout>
		        
		</LinearLayout>
	    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.45"
        android:orientation="vertical" >
	    
        <TextView
            android:id="@+id/VIN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/VINPreface"
            android:textColor="@android:color/white" />
        
    </LinearLayout>

</LinearLayout>